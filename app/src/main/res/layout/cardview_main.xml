<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingRight="10dp"
    android:paddingLeft="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/news_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/news_photo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ulinxinru" />

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/news_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#25000000"
                    android:gravity="left"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="招聘服务员"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/news_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_header"
                android:layout_margin="15dp"
                android:maxLines="2"
                android:text="王先生" />
            <TextView
                android:id="@+id/news_info_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/news_info_1"
                android:layout_toLeftOf="@+id/news_info_1"
                android:layout_toStartOf="@+id/news_info_1"
                android:lineSpacingExtra="15dp"
                android:text="2000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/news_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/news_info_2"
                android:layout_toLeftOf="@+id/news_info_2"
                android:layout_toStartOf="@+id/news_info_2"
                android:lineSpacingExtra="15dp"
                android:text="/"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/news_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/news_desc"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:lineSpacingExtra="15dp"
                android:text="月"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>